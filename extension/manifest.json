{
  "manifest_version": 3,
  "name": "Fake Data Generator",
  "version": "1.0.0",
  "description": "Fill forms with realistic fake data for testing purposes",
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["option-picker.js", "date-picker.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "fill-single-field": {
      "suggested_key": {
        "default": "Alt+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Fill single field with fake data"
    },
    "fill-entire-form": {
      "suggested_key": {
        "default": "Alt+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Fill entire form with fake data"
    }
  }
}
